{% extends 'base.html.twig' %}

{% block cabezaApartado %}
<h2>ADMINISTRACION de Turnos del d√≠a {{ fecha|date('d/m/Y') }}</h2>
<a href="{{ path('gestion_turnos') }}" class="badge bg-secondary">‚Üê Volver</a>
{% endblock %}


{% block contenidoApartado %}
{% for tipo in ['COMIDAS', 'CENAS'] %}
    <div class="d-flex flex-column align-items-center mt-4">
        <h3>Turno de {{ tipo|capitalize }}</h3>

        {% if turnos[tipo] %}
            <p><strong>Inicio:</strong> {{ turnos[tipo].horaInicio|date('H:i') }}</p>
            <p><strong>Fin:</strong> {{ turnos[tipo].horaFin|date('H:i') }}</p>
            <p><strong>Reservas por Mesa:</strong> {{ turnos[tipo].reservasPorMesa }}</p>

            <a href="{{ path('turno_editar', { id: turnos[tipo].id }) }}">‚úèÔ∏è Editar</a>


            {# Opci√≥n 2 (m√°s segura): redirigir a vista de confirmaci√≥n (descomenta si usas confirmaci√≥n) #}
          <a href="{{ path('turno_eliminar', { id: turnos[tipo].id }) }}">üóëÔ∏è Confirmar eliminaci√≥n</a> 

        {% else %}
            <p>No hay turno de {{ tipo }} creado.</p>
            <a href="{{ path('turno_crear', { tipo: tipo, fecha: fecha|date('Y-m-d') }) }}">‚ûï Crear turno</a>
        {% endif %}
    </div>
{% endfor %}

{% endblock %}
